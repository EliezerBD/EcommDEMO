# ========================================
# Variables de Entorno - Ejemplo
# ========================================
# Copia este archivo como .env y configura los valores reales
# IMPORTANTE: .env debe estar en .gitignore (NO subir a git)

# ========================================
# Perfil de Spring
# ========================================
# Opciones: dev, prod
SPRING_PROFILES_ACTIVE=dev

# ========================================
# Base de Datos PostgreSQL
# ========================================
DB_URL=jdbc:postgresql://localhost:5432/ecommerce_catalogo
DB_USERNAME=user
DB_PASSWORD=tu_password_seguro_aqui

# ========================================
# Configuración de JPA
# ========================================
# Opciones: create, create-drop, update, validate, none
JPA_DDL_AUTO=update
JPA_SHOW_SQL=true

# ========================================
# Configuración del Servidor
# ========================================
SERVER_PORT=8081

# ========================================
# Seguridad - Usuario Admin
# ========================================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=tu_password_admin_seguro

# ========================================
# Logging
# ========================================
# Opciones: TRACE, DEBUG, INFO, WARN, ERROR
LOG_LEVEL=INFO
SQL_LOG_LEVEL=DEBUG
BIND_LOG_LEVEL=TRACE
